<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comment_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ypz_bg"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="16sp"
                autofit:minTextSize="16sp" />

            <Button
                android:id="@+id/get_call"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:textColor="@color/black_white_txt"
                android:layout_marginLeft="@dimen/comment_m_left"
                android:layout_marginRight="@dimen/comment_m_right"
                android:background="@drawable/white_black_btn"
                android:textSize="@dimen/comment_text"
                android:text="领取通讯器" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>