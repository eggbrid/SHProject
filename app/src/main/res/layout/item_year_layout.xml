<?xml version="1.0" encoding="utf-8"?>
<com.shpro.xus.shproject.view.views.VerticalViewPagerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:padding="8dp"
            android:text="今年运势"
            android:textSize="@dimen/comment_text_l" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/bg_color"
            android:padding="10dp"
            android:text="综合评价"
            android:textSize="@dimen/comment_text_sm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_6444"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价:" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/year_general_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="4dp"
                    android:text="异性助力特别强的一周，在工作、生活中异性朋友时常会扮演你的贵人，当你遇到困难时会得到他们的意外援助，让你一次次度过难关。" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="指数:" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/year_general_index"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="4dp"
                    android:text="95分" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/bg_color"
            android:padding="10dp"
            android:text="爱情运势"
            android:textSize="@dimen/comment_text_sm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_6444"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价:" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/year_love_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="4dp"
                    android:text="感情上有点郁闷，外力的干扰容易让你烦恼伤神，别小题大作，更别吃醋吃过头啰" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="指数:" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/year_love_index"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="4dp"
                    android:text="95分" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/bg_color"
            android:padding="10dp"
            android:text="工作运势"
            android:textSize="@dimen/comment_text_sm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_6444"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价:" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/year_work_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="4dp"
                    android:text="合理的安排作息时间，不要安排太多的娱乐活动，过度的玩乐会让你失去工作的激情。\r\n\r\n" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="指数:" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/work_index"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="4dp"
                    android:text="95分" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/bg_color"
            android:padding="10dp"
            android:text="财富运势"
            android:textSize="@dimen/comment_text_sm" />

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@color/bg_6444"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价:" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/year_money_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="4dp"
                    android:text="财运佳，四处充满商机，适合运用口才开发财源，进帐丰厚。                                                                                                                                                                 \n" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="指数:" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/money_index"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="4dp"
                    android:text="95分" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/bg_color"
            android:padding="10dp"
            android:text="健康指南"
            android:textSize="@dimen/comment_text_sm" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_6444"
            android:orientation="vertical">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/health_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:lineSpacingExtra="4dp"
                android:text="今年健康的幸运神对你微笑。精神抖擞，胃口很好，营养吸收力强，故用膳食调理身体会得到非常好的效果，若身体原有顽疾，将在入夏后得到好转。需注意保护视力，面对手机、电脑时间过长，容易引起眼睛疲劳，不如多去户外做休闲运动。自在随性的休闲旅行比较适合你，轻松就能获得身心愉悦，而危险系数较高的探险、极限运动等还是能免则免。" />

        </LinearLayout>

    </LinearLayout>
</com.shpro.xus.shproject.view.views.VerticalViewPagerScrollView>